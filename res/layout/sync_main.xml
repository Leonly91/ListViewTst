<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="200dp"
            android:id="@+id/sync_text"
            android:text="0"
            android:textSize="180dp"
            />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Start" android:id="@+id/sync_startBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Stop" android:id="@+id/sync_stopBtn"
            android:layout_alignLeft="@id/sync_startBtn"
            android:layout_below="@id/sync_startBtn"/>

</RelativeLayout>